@model WebSolutionForModelPharmacies.Models.PasswordReset
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Login Page -->
<div class="login_page_area">
    <div class="container">
        <div class="row">

            <div class="col-md-8 col-sm-8 col-xs-8">
                <div class="create_account_area">
                    <h2 class="caa_heading">Reset Your Password!</h2>


                    <div class="caa_form_area">

                        <form action="/reset/password/confirm/post" method="post">

                            <div class="caa_form_group">

                                <input type="hidden" name="email" autocomplete="on" value="@Model.Email" />
                                <input type="hidden" name="token" autocomplete="on" value="@Model._token" />


                                <div class="login_email">
                                    <label for="Password">Password</label>
                                    <div class="input-area"><input id="Password" type="password" name="password" placeholder="Password" value="" /></div>
                                </div>

                                <div class="login_email">
                                    <label for="Confirm_Password"> Confirm Password</label>
                                    <div class="input-area"><input id="Confirm_Password" type="password" name="confirm_password" placeholder="Confirm Password" value="" /></div>
                                </div>

                                <button type="submit" id="acc_Login" class="btn btn-default acc_btn">
                                    <span> <i class="fa fa-lock btn_icon"></i> Reset </span>
                                </button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>






        </div>
    </div>
</div>

