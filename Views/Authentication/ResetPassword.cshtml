
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Login Page -->
<div class="login_page_area">
    <div class="container">
        <div class="row">

            <div class="col-md-8 col-sm-8 col-xs-8">
                <div class="create_account_area">
                    <h2 class="caa_heading">Reset Your Password!</h2>


                    <div class="caa_form_area">

                        <form action="/reset/password/post" method="post">

                            <div class="caa_form_group">
                                <div class="login_email">
                                    <label>Email address</label>
                                    <div class="input-area"><input type="email" name="email" autocomplete="on" /></div>
                                </div>
                                <button type="submit" id="acc_Login" class="btn btn-default acc_btn">
                                    <span> <i class="fa fa-lock btn_icon"></i> Send </span>
                                </button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>


     



        </div>
    </div>
</div>

